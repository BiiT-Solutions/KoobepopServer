<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>KoobepopServer</display-name>

	<context-param>
		<description>KoobepopServer</description>
		<param-name>heartbeatInterval</param-name>
		<!-- 20 minutes that means full expiration time is 60 minutes -->
		<param-value>1200</param-value>
	</context-param>

	<context-param>
		<description>KoobepopServer Designer</description>
		<param-name>productionMode</param-name>
		<param-value>true</param-value>
	</context-param>

	<!-- Using Vaadin GUI -->
	<servlet>
		<servlet-name>Vaadin Application Servlet</servlet-name>
		<servlet-class>com.biit.koobepopserver.gui.KoobepopServlet</servlet-class>
		<init-param>
			<param-name>closeIdleSessions</param-name>
			<param-value>true</param-value>
		</init-param>
		<!-- Enable server push -->
		<init-param>
			<param-name>pushmode</param-name>
			<param-value>automatic</param-value>
		</init-param>
		<async-supported>true</async-supported>
	</servlet>

	<!-- binds a JPA EntityManager to the thread for the entire processing of 
		the request -->
	<!--<filter> <filter-name>OpenEntityManagerInViewFilterUsmo</filter-name> 
		<filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class> 
		<init-param> <param-name>entityManagerFactoryBeanName</param-name> <param-value>usmoProjectManagerFactory</param-value> 
		</init-param> </filter> -->
	<!-- Map the EntityManager Filter to all Request -->
	<!--<filter-mapping> <filter-name>OpenEntityManagerInViewFilterUsmo</filter-name> 
		<url-pattern>/*</url-pattern> </filter-mapping> -->

	<servlet-mapping>
		<servlet-name>Vaadin Application Servlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<mime-mapping>
		<extension>manifest</extension>
		<mime-type>text/cache-manifest</mime-type>
	</mime-mapping>

	<!-- Spring -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:applicationContext.xml</param-value>
	</context-param>
	
	<!-- Apache Tomcat session expire -->
	<session-config>
		<session-timeout>61</session-timeout>
	</session-config>


	<servlet>
		<servlet-name>KoobepopServer REST Service</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.biit.koobepopserver.core.rest</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>KoobepopServer REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<!-- CORS: This is for accepting OPTIONS request and returning what can be asked for. -->
	<filter>
	    <filter-name>CORS</filter-name>
	    <filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>
	    <init-param>
	        <param-name>cors.allowOrigin</param-name>
	        <param-value>*</param-value>
	    </init-param>
	    <init-param>
	        <param-name>cors.supportedHeaders</param-name>
	        <param-value>accept, authorization, origin, content-type</param-value>
	    </init-param>
	    <init-param>
	        <param-name>cors.supportedMethods</param-name>
	        <param-value>GET, POST, HEAD, OPTIONS</param-value>
	    </init-param>
	</filter>
	
	<filter-mapping>
	    <filter-name>CORS</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>
	



</web-app>
